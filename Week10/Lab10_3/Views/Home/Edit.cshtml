@model Coffee;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Coffee</h1>

<form method="post" action="../Home/SaveEdit">
    <input type="hidden" name="ProductID" value="@Model.ProductID" />
    Coffee Name: <input type="text" name="Name" value="@Model.Name" /><br />
    Price: <input type="text" name="Price" value="@Model.Price" /><br />
    Category: <input type="text" name="Category" value="@Model.Category" /><br />
    Description: <textarea name="Description" cols="30" rows="10" value="@Model.Description">@Model.Description</textarea><br />

    <input type="submit" value="Save" />
    
</form>

